<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HospitalFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/line"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toLeftOf="@+id/viewLine3"
                    android:layout_marginRight="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff0f0f"
                        >

                        <TextView
                            android:id="@+id/txtTotal5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/droid_sans"
                            android:text="Total"

                            android:layout_marginTop="5dp"
                            android:textColor="#fff"
                            android:layout_centerHorizontal="true"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospitals"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txtTotal5"
                            android:id="@+id/txtHospital5"
                            android:textColor="#fff"
                            android:fontFamily="@font/droid_sans"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalHospital"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:textSize="25dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/viewLine3"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toRightOf="@+id/viewLine3"
                    android:layout_marginLeft="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff0f0f"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:fontFamily="@font/droid_sans"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:id="@+id/txtTotal6"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beds"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/droid_sans"
                            android:layout_below="@+id/txtTotal6"
                            android:id="@+id/txtBeds6"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalbeds"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:textSize="25dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toLeftOf="@+id/viewLine1"
                    android:layout_marginRight="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#a100ba"
                        >

                        <TextView
                            android:id="@+id/txtRural1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/droid_sans"
                            android:text="Rural"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospitals"
                            android:layout_below="@+id/txtRural1"
                            android:id="@+id/txtHospital1"
                            android:textColor="#fff"
                            android:fontFamily="@font/droid_sans"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalRuralHospital"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:layout_centerHorizontal="true"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/viewLine1"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toRightOf="@+id/viewLine1"
                    android:layout_marginLeft="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#a100ba"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rural"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/droid_sans"
                            android:textSize="15dp"
                            android:id="@+id/txtRural2"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beds"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/droid_sans"
                            android:layout_below="@+id/txtRural2"
                            android:id="@+id/txtBeds2"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalRuralbeds"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:layout_centerHorizontal="true"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toLeftOf="@+id/viewLine2"
                    android:layout_marginRight="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#930fff"
                        >

                        <TextView
                            android:id="@+id/txtUrban3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/droid_sans"
                            android:text="Urban"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospitals"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txtUrban3"
                            android:id="@+id/txtHospital3"
                            android:textColor="#fff"
                            android:fontFamily="@font/droid_sans"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalUrbanHospital"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:layout_centerHorizontal="true"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/viewLine2"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_toRightOf="@+id/viewLine2"
                    android:layout_marginLeft="7dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="15dp"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#930fff"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urban"
                            android:fontFamily="@font/droid_sans"
                            android:textSize="15dp"
                            android:id="@+id/txtUrban4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beds"
                            android:fontFamily="@font/droid_sans"
                            android:layout_below="@+id/txtUrban4"
                            android:id="@+id/txtBeds4"
                            android:layout_centerHorizontal="true"
                            android:textColor="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtTotalUrbanbeds"
                            android:layout_alignParentBottom="true"
                            android:text=""
                            android:textSize="25dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="#fff"
                            android:fontFamily="@font/fresca"
                            android:layout_marginBottom="5dp"
                            />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="15dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:id="@+id/searchViewHospital"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerViewStates"
                        android:padding="5dp"
                        />

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</FrameLayout>