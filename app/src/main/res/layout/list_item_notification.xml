<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e9ecf2"
    android:id="@+id/NotificationParent">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Revised guidelines for International Arrivals"
        android:textColor="#042e2c"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fresca"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"
            android:layout_marginStart="10dp"
            android:text="02.08.2020"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPDF"
            android:text="PDF"
            android:textColor="#ff1212"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#4f545e"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        />


</LinearLayout>